// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Driver {
  id          Int @id @default(autoincrement())
  firstName   String @db.VarChar(255)
  lastName    String @db.VarChar(255)
  shortName   String @db.Char(3)
  country     String @db.VarChar(255)
  number      Int
  dateOfBirth DateTime
  team        Team @relation(fields: [teamId], references: [id])
  teamId      Int
  races       RacesOnDrivers[]
}

model Team {
  id          Int @id @default(autoincrement())
  name        String @db.VarChar(255)
  base        String @db.VarChar(255)
  chief       String @db.VarChar(255)
  powerUnit   String @db.VarChar(255)
  drivers     Driver[]
}

model Circuit {
  id          Int @id @default(autoincrement())
  city        String @db.VarChar(255)
  name        String @db.VarChar(255)
  nrOfLaps    Int
  length      Float
  races       Race[]
}

model Race {
  id          Int @id @default(autoincrement())
  start       DateTime
  name        String @db.VarChar(255)
  isSprint    Boolean
  circuit     Circuit @relation(fields: [circuitId], references: [id])
  circuitId   Int
  drivers     RacesOnDrivers[]
}

model RacesOnDrivers {
  race        Race @relation(fields: [raceId], references: [id])
  raceId      Int
  driver      Driver @relation(fields: [driverId], references: [id])
  driverId    Int

  @@id([raceId, driverId])
}

model User {
  auth0Id     String @db.VarChar(255) @unique
}